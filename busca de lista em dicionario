import random


# 11 Busca em Lista de Dicion√°rios

def buscar_pessoa_por_nome(lista, nome):
    """Busca linear por uma pessoa em uma lista de dicion√°rios."""
    for pessoa in lista:
        if pessoa["nome"].lower() == nome.lower():
            return f"Pessoa encontrada: Nome = {pessoa['nome']}, Idade = {pessoa['idade']}"
    return f"Pessoa com nome '{nome}' n√£o encontrada."


# 12Ô∏è Jogo: Adivinhe o N√∫mero (Busca Bin√°ria)

def jogo_adivinhe_numero():
    """O computador tenta adivinhar o n√∫mero escolhido pelo jogador."""
    print("üéÆ Bem-vindo ao jogo: Adivinhe o N√∫mero!")
    print("Pense em um n√∫mero entre 1 e 100...")

    baixo = 1
    alto = 100
    tentativas = 0

    while True:
        palpite = (baixo + alto) // 2
        tentativas += 1
        print(f"Tentativa {tentativas}: O n√∫mero √© {palpite}?")
        resposta = input("Digite (M)aior, (m)enor ou (C)orreto: ").lower()

        if resposta == 'c':
            print(f" Acertei em {tentativas} tentativas! O n√∫mero era {palpite}.")
            break
        elif resposta == 'm':
            alto = palpite - 1
        elif resposta == 'M':
            baixo = palpite + 1
        else:
            print("Resposta inv√°lida! Digite apenas M, m ou C.")


# 13Ô∏è Buscar Produtos por Pre√ßo

def buscar_produtos_por_preco(lista_produtos, preco_alvo):
    """Busca linear para encontrar produtos com pre√ßo espec√≠fico."""
    encontrados = []
    for produto in lista_produtos:
        if produto["preco"] == preco_alvo:
            encontrados.append(produto["nome"])

    if encontrados:
        return f"Produtos com pre√ßo {preco_alvo}: {', '.join(encontrados)}"
    else:
        return f"Nenhum produto encontrado com o pre√ßo {preco_alvo}."



# 14Ô∏è Implementar sua pr√≥pria fun√ß√£o index()
def meu_index(lista, valor):
    """Funciona como list.index(), usando busca sequencial."""
    for i in range(len(lista)):
        if lista[i] == valor:
            return i
    return -1


if __name__ == "__main__":
    print("===== Testes das Fun√ß√µes de Busca =====\n")

    pessoas = [
        {"nome": "Ana", "idade": 25},
        {"nome": "Jo√£o", "idade": 30},
        {"nome": "Maria", "idade": 22}
    ]
    print(buscar_pessoa_por_nome(pessoas, "Jo√£o"))
    print(buscar_pessoa_por_nome(pessoas, "Carlos"))

    produtos = [
        {"nome": "Teclado", "preco": 100},
        {"nome": "Mouse", "preco": 80},
        {"nome": "Monitor", "preco": 100},
    ]
    print(buscar_produtos_por_preco(produtos, 100))
    print(buscar_produtos_por_preco(produtos, 200))

    lista_exemplo = [10, 20, 30, 40, 50]
    print(f"O √≠ndice do n√∫mero 30 √©: {meu_index(lista_exemplo, 30)}")
    print(f"O √≠ndice do n√∫mero 99 √©: {meu_index(lista_exemplo, 99)}")
